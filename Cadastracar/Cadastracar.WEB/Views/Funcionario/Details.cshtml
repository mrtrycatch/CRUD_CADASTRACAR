@model Cadastracar.DATA.Models.Funcionario

@{
    ViewData["Title"] = "Detalhes do funcionário";
}

<h1>Detalhes do funcionário</h1>
<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<div>
    <h4>Confira os detalhes do funcionário abaixo</h4>
    <hr />
    <div class="card">
        <div class="card-header">Funcionário</div>
        <div class="card-body">
            <dl>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FuncNome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FuncNome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Cpf)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cpf)
                </dd>
            </dl>
        </div>
    </div>
</div>
<br />
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.FuncCodigo">Alterar</a>
</div>
