@model IEnumerable<Cadastracar.DATA.Models.VwVeiculo>

@{
    ViewData["Title"] = "Lista de veículos";
}

<h1>Veículos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo veículo</a>
</p>
<table id="DataTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VcoPlaca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VcoFrota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VcoDataAquisicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CtgaDescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FuncNome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VcoPlaca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VcoFrota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VcoDataAquisicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CtgaDescricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuncNome)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.VcoCodigo">Alterar</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.VcoCodigo">Detalhes</a>
                    <button data-toggle="modal" data-target="#ModalDelete-@item.VcoCodigo" class="btn btn-danger">Excluir</button>

                    <div class="modal fade" id="ModalDelete-@item.VcoCodigo" tabindex="-1" role="dialog" aria-labelledby="ModalDelete-@item.VcoCodigo-Label" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="ModalDelete-@item.VcoCodigo-Label">Excluir veículo</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Tem certeza que deseja excluir o veículo com a placa <b>@item.VcoPlaca</b> e de responsabilidade de <b>@item.FuncNome</b> ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.VcoCodigo">Sim</a>
                                </div>
                            </div>
                        </div>
                    </div>


                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#DataTable').DataTable({
                "bJQueryUI": true,
                "oLanguage": {
                    "sProcessing": "Processando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "Não foram encontrados resultados",
                    "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando de 0 até 0 de 0 registros",
                    "sInfoFiltered": "",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "Primeiro",
                        "sPrevious": "Anterior",
                        "sNext": "Seguinte",
                        "sLast": "Último"
                    }
                }
            });
        });
    </script>
}
